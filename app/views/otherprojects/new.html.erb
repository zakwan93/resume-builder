<div class= "uk-container uk-background-muted uk-padding uk-panel" style="padding: 50px;margin-top: 150px;">
    <h2> Add your Project here </h2><br>
        <%= form_for @otherprojects do |f| %>

             <%= f.hidden_field :resume_id, :value => @user_resume %>

          
            <div class="uk-form-controls">
                <input class="uk-input" type="text" placeholder="Name of the project"
                <%= f.text_field :name, :required => true %>
            </div>
            <br>
            Description <elm style= "color: red;">(NOTE :- FIRST TWO LINES  ARE MANDATORY)</elm>
        
            <div class="uk-form-controls" style="margin-bottom: 5px;">
                <input class="uk-input" type="text" placeholder="Description of your project"
                <%= f.text_field :desc1, :required => true %>
            </div>
            <div class="uk-form-controls" style="margin-bottom: 5px;">
                <input class="uk-input" type="text" placeholder="Description of your project"
                <%= f.text_field :desc2, :required => true %>
            </div>
            <div class="uk-form-controls" style="margin-bottom: 5px;">
                <input class="uk-input" type="text" placeholder="Description of your project"
                <%= f.text_field :desc3 %>
            </div>
            <div class="uk-form-controls" style="margin-bottom: 5px;">
                <input class="uk-input" type="text" placeholder="Description of your project"
                <%= f.text_field :desc4 %>
            </div>

             
             <br>
            <button class="uk-button uk-button-primary"
                 <%= submit_tag "Add" %> ADD
             </button>
    
        <% end %>
</div>

