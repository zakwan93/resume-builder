<div class="uk-container uk-panel">
  <div class="uk-card uk-card-body">
    <h3 class="uk-card-title uk-text-center" style="line-height: 0;">
      <%= intro.name %>
    </h3>
    <h4 class="uk-text-center" style="color:red; line-height: 0;margin-top: 30px;">
      <%= intro.title %>
    </h4>
    <div class="uk-child-width-1-3@m uk-child-width-1-2@s" uk-grid >
        <div class="uk-text-left uk-h5">
          <span uk-icon="icon: info"></span>
          <span><%= intro.address %></span>
        </div>
        <div class="uk-text-center uk-h5">
          <span uk-icon="icon: phone"></span>
          <span><%= intro.phone %></span>
        </div>
        <div class="uk-text-right uk-h5">
          <span uk-icon="icon: mail"></span>
          <span><%= intro.email %></span>
        </div>
    </div>   
</div>
