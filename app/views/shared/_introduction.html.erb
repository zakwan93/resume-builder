
<div class="uk-container uk-background-muted uk-padding uk-panel" style="height: 230px;">
    <% @introductions.each do |t| %>
        <div class="uk-card uk-card-body">
          <h3 class="uk-card-title uk-align-center" style="text-align: center; font-size: 34px;" >
              <%= t.name %>
              <p class="uk-h4" style="color:red;"><%= t.title %></p>
            
              <div class="uk-child-width-1-3@m uk-child-width-1-2@s" uk-grid>
                  <div>
                      <span uk-icon="icon: info"></span>
                      <span class="uk-text-left uk-h5"><%= t.address %></span>
                  </div>
                  <div>
                      <span uk-icon="icon: phone"></span>
                      <span class="uk-text-center uk-h5"><%= t.phone %></span>
                  </div>
                  <div>
                      <span uk-icon="icon: mail"></span>
                      <span class="uk-text-right uk-h5"><%= t.email %></span>
                  </div>
              </div>
          </h3>
        </div>
<!-- 
        <a <%= link_to "Edit", edit_introduction_path(t) %></a><br>
        <a  <%= link_to "Remove", introductions_path(t), method: :delete, data: { confirm: "Are you sure?" } %></a> -->
    <% end %>

</div>